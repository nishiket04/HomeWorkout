<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_theam"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignInUp.ActivitiesInterestFragment">

    <RelativeLayout
        android:id="@+id/activitiOfInterestRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backGenderBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back_button_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/poppins_medium"
            android:lineHeight="20dp"
            android:text="Step 8 of 8"
            android:textAlignment="center"
            android:textColor="@color/primary"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/skipGenderTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/open_sans"
            android:lineHeight="20dp"
            android:text="Skip"
            android:textAlignment="center"
            android:textColor="#E5E9EF"
            android:textSize="16dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textViewHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:fontFamily="@font/poppins_semibold"
        android:lineHeight="32dp"
        android:textAlignment="center"
        android:text="Choose activities that interest"
        android:textColor="@color/white"
        android:textSize="27dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activitiOfInterestRelativeLayout" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activitiesInterestRecylerView"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="28dp"
        tools:itemCount="5"
        tools:listitem="@layout/activities_interest_card_design"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHeight" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginRight="21dp"
        android:layout_marginLeft="21dp"
        android:background="@drawable/button_design"
        android:text="Continue"
        android:textAllCaps="false"
        android:textSize="17dp"
        android:id="@+id/activitiOfInterestContinueBtn"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="15dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>